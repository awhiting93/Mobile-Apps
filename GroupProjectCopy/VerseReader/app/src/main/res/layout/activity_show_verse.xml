<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@drawable/title_border">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:id="@+id/chapterNumberTitle"
        android:text="@string/first_john"
        android:gravity="center"
        android:background="@drawable/title_border"
        android:textColor="#FFFFFF"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/selectAChapter"
        android:gravity="center"
        android:background="@drawable/title_border"
        android:layout_below="@+id/chapterNumberTitle"
        android:padding="4dp"
        android:textColor="#FFFFFF"
        android:text="@string/swipe_to_continue"/>
    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/verseFragmentHolder"
        android:layout_below="@+id/selectAChapter"/>
</RelativeLayout>

