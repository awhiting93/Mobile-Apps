<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@drawable/fragment_background">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="4dp"
        android:id="@+id/hasBeenRead"
        android:textSize="13sp"
        android:gravity="center"
        android:background="@drawable/fragment_background"
        android:text="@string/mark_as_read"/>
    <TextView
        android:id="@+id/chapterName"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_toLeftOf="@+id/hasBeenRead"
        android:layout_toStartOf="@+id/hasBeenRead"
        android:padding="4dp"
        android:textSize="40sp"
        android:layout_alignBottom="@+id/hasBeenRead"
        android:layout_alignParentTop="true"
        android:background="@drawable/fragment_background"/>
    <TextView
        android:id="@+id/progressText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:padding="4dp"
        android:textSize="20sp"
        android:background="@drawable/fragment_background"
        android:layout_below="@+id/hasBeenRead"
        android:text="@string/chapter_progress"
        android:gravity="center"/>

</RelativeLayout>